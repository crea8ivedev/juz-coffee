      "label": "Coffee Cup Text",
      "id": "coffee_cup_text"
    },
    {
      "type": "richtext",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "richtext",
      "label": "Desciption",
      "id": "desciption"
    },
    {
      "type": "text",
      "label": "App Store Text",
      "id": "app_store_text"
    },
    {
