<section class="marquee-section bg-primary-blue py-40 max-xl:py-20 overflow-hidden whitespace-nowrap {{ section.settings.extra_class }}">
  <div class="marquee-wrapper relative flex">
    <div class="marquee-track">
      {% for block in section.blocks %}
        <div
          class="marquee-item flex mdscreen6:gap-x-40 gap-x-20 items-center mdscreen6:mr-40 mr-20"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.image != blank %}
            <div class="marquee-image mdscreen6:w-60 mdscreen6:h-60 w-60 h-60 shrink-0 rounded-10">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="marquee image"
                height="auto"
                width="auto"
                class="w-full h-full rounded-10"
              >
            </div>
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="marquee-text font-heading mdscreen6:text-24 text-18 mdscreen6:leading-30 leading-24">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>

        {% if section.settings.show_separator and forloop.index != section.blocks.size %}
          <div class="separator w-[1px] h-40 bg-white mdscreen6:mx-20 mx-10 shrink-0"></div>
        {% endif %}
      {% endfor %}

      {%- comment -%} Duplicate for infinite loop {%- endcomment -%}
      {% for block in section.blocks %}
        <div
          class="marquee-item flex mdscreen6:gap-x-40 gap-x-20 items-center mdscreen6:mr-40 mr-20"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.image != blank %}
            <div class="marquee-image mdscreen6:w-60 mdscreen6:h-60 w-60 h-60 shrink-0 rounded-10">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="marquee image"
                height="auto"
                width="auto"
                class="w-full h-full rounded-10"
              >
            </div>
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="marquee-text font-heading mdscreen6:text-24 text-18 mdscreen6:leading-30 leading-24">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>

        {% if section.settings.show_separator and forloop.index != section.blocks.size %}
          <div class="separator w-[1px] h-40 bg-white mdscreen6:mx-20 mx-10 shrink-0"></div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .marquee-track {
    display: flex;
    width: max-content;
    animation: marqueeScroll 30s linear infinite;
  }

  @keyframes marqueeScroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

{% schema %}
{
  "name": "Marquee",
  "settings": [
    {
      "type": "text",
      "label": "Extra Class",
      "id": "extra_class"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Marquee Item",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_separator",
          "label": "Show separator between items",
          "default": false
        },

        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Sample text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee",
      "category": "Custom",
      "blocks": [{ "type": "item" }, { "type": "item" }, { "type": "item" }]
    }
  ]
}
{% endschema %}
